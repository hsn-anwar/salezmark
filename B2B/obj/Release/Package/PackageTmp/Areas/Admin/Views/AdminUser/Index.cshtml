@model List<B2B.Areas.Admin.ViewModel.AdminUser>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>

<div class="section-body">
    <div class="container-fluid">
        <div class="row" style="margin-top:20px">
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box orange">@ViewBag.Users</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin"})" class="my_sort_cut text-muted">
                            <i class="fa fa-users"></i>
                            <span>Total Users</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box green">@ViewBag.Active</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=1})" class="my_sort_cut text-muted">
                            <i class="icon-user-follow"></i>
                            <span>Active</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box cyan">@ViewBag.Pending</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=2})" class="my_sort_cut text-muted">
                            <i class="fa fa-list"></i>
                            <span>Pending</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box cyan">@ViewBag.Block</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=3})" class="my_sort_cut text-muted">
                            <i class="fa fa-exclamation"></i>
                            <span>Blocked</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box orange">@ViewBag.New</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=4})" class="my_sort_cut text-muted">
                            <i class="fa fa-user-plus"></i>
                            <span>New</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box green">@ViewBag.Expired</div>
                        <a href="#" class="my_sort_cut text-muted">
                            <i class="fa fa-clock-o"></i>
                            <span>Expired</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box green">@ViewBag.Supermarket</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=8})" class="my_sort_cut text-muted">
                            <i class="icon-trophy"></i>
                            <span>Supermarket</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box cyan">@ViewBag.Merchants</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=7})" class="my_sort_cut text-muted">
                            <i class="icon-users"></i>
                            <span>Merchants</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box orange">@ViewBag.Sales</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=6})" class="my_sort_cut text-muted">
                            <i class="icon-user"></i>
                            <span>Sales Team</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box green">@ViewBag.Supervisor</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=9})" class="my_sort_cut text-muted">
                            <i class="icon-briefcase"></i>
                            <span>Supervisor</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-xl-2">
                <div class="card">
                    <div class="card-body ribbon">
                        <div class="ribbon-box cyan">@ViewBag.Delivery</div>
                        <a href="@Url.Action("Index","AdminUser",new { area="Admin",flag=5})" class="my_sort_cut text-muted">
                            <i class="icon-clock"></i>
                            <span>Delivery Team</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" style="padding-bottom:20px">
                <h3 class="card-title">Application Users</h3>
            </div>
        </div>
        <div class="tab-content">
            <div class="table-responsive" id="users">
                <table class="table table-hover table-vcenter text-nowrap table_custom border-style list" id="user-table">
                    <thead>
                        <tr>
                            <th>Profile</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Country</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var merchant in Model)
                        {
                            <tr class="">
                                <td class="text-center width40">
                                    @if (merchant.ImageUrl == null)
                                    {
                                        <span class="avatar avatar-blue" data-toggle="tooltip" title="" data-original-title="@merchant.Name">@merchant.Name.Substring(0, 2)</span>
                                    }
                                    else
                                    {
                                        if (File.Exists(Server.MapPath("~" + merchant.ImageUrl)))
                                        {
                                            <img class="avatar avatar-blue" src="@merchant.ImageUrl" data-toggle="tooltip" title="" data-original-title="@merchant.Name">
                                        }
                                        else
                                        {
                                            <span class="avatar avatar-red" data-toggle="tooltip" title="" data-original-title="@merchant.Name">@merchant.Name.Substring(0, 2)</span>
                                        }
                                    }

                                </td>
                                <td>
                                    <div><a href="javascript:void(0);">@merchant.Name</a></div>
                                    <div class="text-muted">@merchant.PhoneNumber</div>
                                </td>
                                <td class="hidden-xs">
                                    <div class="text-muted">@merchant.Email</div>
                                </td>
                                <td class="hidden-sm">
                                    <div class="text-muted">@merchant.UserType</div>
                                </td>
                                <td class="hidden-sm">
                                    <div class="text-muted">@merchant.Country</div>
                                </td>
                                <td class="hidden-sm">
                                    <div class="text-muted">@merchant.Status</div>
                                </td>
                                <td class="text-left">
                                    @if (merchant.Status == B2B.Models.UserStatus.Pending)
                                    {
                                        <button type="button" class="btn btn-icon btn-sm" title="Approve this user" onclick="ApprovedUser('@merchant.Id')"><i class="icon-user-follow text-cyan"></i></button>
                                    }
                                    else if (merchant.Status == B2B.Models.UserStatus.Active)
                                    {
                                        <button type="button" class="btn btn-icon btn-sm" title="Block this user" onclick="confirmBlockUnblockSeller('@merchant.Id','@merchant.Status')"><i class="fa fa-trash text-danger"></i></button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-icon btn-sm" title="Activate this user" onclick="confirmBlockUnblockSeller('@merchant.Id','@merchant.Status')"><i class="icon-user-following text-azure"></i></button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $('#user-table').DataTable(
        {
            "aLengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
            "iDisplayLength": 5
        }
    );
    $(document).ready(function () {
        $("#Page_Title").html("All Users");
    })

    function confirmBlockUnblockSeller(sellerId,status) {
        if (status == 'Active') {
            swal({
                title: 'Are you sure?',
                text: 'You want to block this user.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No',
            }, function () {
                BlockUser(sellerId);
            })
        }
        else if (status == 'Blocked') {
            swal({
                title: 'Are you sure?',
                text: 'You want to activate this user.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No',
            }, function () {
                BlockUser(sellerId);
            })
        }

    }
    function BlockUser(sellerId) {
          $.ajax({
            type: "GET",
              url: "@Url.Action("ChangeUserStatus", "AdminUser",new { area="Admin"})?userId=" + sellerId,
              success: function (result) {
                  if (result.Status) {
                      location.reload();
                    }
                    else {
                        swal(
                            'Not Blocked!',
                            result.Msg,
                            'error'
                        );
                  }
            },
            error: function (error) {
                return error;
            },
        });
    }
    function ApprovedUser(sellerId) {
        swal({
            title: 'Are you sure?',
            text: 'You want to approve this user.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
        }, function () {
            Approve(sellerId);
        })
    }
    
    function Approve(sellerId) {
          $.ajax({
            type: "GET",
              url: "@Url.Action("ApproveUser", "AdminUser",new { area="Admin"})?userId=" + sellerId,
              success: function (result) {
                  if (result.Status) {
                      location.reload();
                    }
                    else {
                        swal(
                            'Not Approved!',
                            result.Msg,
                            'error'
                        );
                  }
            },
            error: function (error) {
                return error;
            },
        });
    }
</script>