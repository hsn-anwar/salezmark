@model B2B.Areas.Admin.ViewModel.PackageViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="section-body mt-3">
    <div class="container-fluid">
        <div class="card">
            @using (Html.BeginForm("Edit", "Packages", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m=>m.Id)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="card-body">
                    <div class="row clearfix">
                        <div class="col-lg-12" style="padding-bottom: 25px;">
                            <h5>Package Cover</h5>
                            <input type="file" class="dropify" name="ImageFile" id="ImageFile">
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name *" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", @placeholder = "Duration *" })
                                @Html.ValidationMessageFor(m => m.Duration, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Note", @rows = "5" })
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.Note, new { @class = "form-control", @placeholder = "Note", @rows = "5" })
                                @Html.ValidationMessageFor(m => m.Note, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <button class="btn btn-primary" type="submit">Add new package</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#Page_Title").html("Update Package");
    })
</script>
