@{
    ViewBag.Title = "Forgot your password?";
    Layout = null;
}
<!doctype html>
<html lang="en" dir="ltr">

<!-- Mirrored from puffintheme.com/craft/soccer/project/forgot-password.html by HTTrack Website Copier/3.x [XR&CO'2014], Wed, 15 Apr 2020 13:33:15 GMT -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="favicon.ico" type="image/x-icon" />

    <title>B2B Portal :: Forgot Password</title>

    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="~/Content/plugins/bootstrap/css/bootstrap.min.css" />

    <!-- Core css -->
    <link rel="stylesheet" href="~/Content/css/main.css" />
    <link rel="stylesheet" href="~/Content/css/theme1.css" />
</head>
<body class="font-montserrat">

    <div class="auth">
        <div class="auth_left">
            <div class="card">
                <div class="text-center">
                    <a class="header-brand" href="#"><i class="fa fa-soccer-ball-o brand-logo"></i></a>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="card-title text-center" style="color: forestgreen">
                        Forgot Password Confirmation.
                    </div>
                    <p class="text-muted">
                        Please check your email to reset your password.
                    </p>
                    <div class="form-footer">
                        <a href="@Url.Action("ForgotPassword","Account",new { area=""})" class="btn btn-primary btn-block">Back to forget password screen</a>
                    </div>
                </div>
                <div class="text-center text-muted">
                    Forget it, <a href="@Url.Action("Login","Account",new { area=""})">Send me Back</a> to the Sign in screen.
                </div>
            </div>
        </div>
        <div class="auth_right full_img"></div>
    </div>

    <script src="~/Content/bundles/lib.vendor.bundle.js"></script>
    <script src="~/Content/js/core.js"></script>
</body>
</html>


