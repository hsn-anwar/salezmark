@using B2B.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="favicon.ico" type="image/x-icon" />

    <title>B2B Protal:: Login</title>

    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="~/Content/plugins/bootstrap/css/bootstrap.min.css" />

    <!-- Core css -->
    <link rel="stylesheet" href="~/Content/css/main.css" />
    <link rel="stylesheet" href="~/Content/css/theme1.css" />
</head>
<body class="font-montserrat">
    <div class="auth">
        <div class="auth_left">
            <div class="card">
                <div class="text-center mb-2">
                    <a class="header-brand" href="#"><i class="fa fa-soccer-ball-o brand-logo"></i></a>
                </div>

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="card-title text-center">Login to your account</div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <select class="custom-select" name="Role">
                                <option value="0">Admin</option>
                                <option value="2">Merchant</option>
                                <option value="4">Sales Team</option>
                                <option value="1">Supermarket</option>
                                <option value="5">Supervisor</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="Email" name="Email" aria-describedby="emailHelp" placeholder="Enter email">
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password<a href="@Url.Action("ForgotPassword","Account",new { area=""})" class="float-right small">I forgot password</a></label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" name="RememberMe" />
                                <span class="custom-control-label">Remember me</span>
                            </label>
                        </div>
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary btn-block" title="Login Now">Sign in</button>
                        </div>
                    </div>
                    <div class="text-center text-muted">
                        <a href="@Url.Action("Register","Account",new { area=""})">Register yourself as merchant</a>
                    </div>
                }

            </div>
        </div>
        <div class="auth_right full_img"></div>
    </div>

    <script src="~/Content/bundles/lib.vendor.bundle.js"></script>
    <script src="~/Content/js/core.js"></script>
</body>

</html>