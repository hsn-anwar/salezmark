@model List<B2B.Areas.Admin.ViewModel.MerchantPackageMetaVM>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>

<div class="section-body">
    <div class="container-fluid">
        <div class="card" style="margin-top:20px">
            <div class="card-header" style="display:block">
                <h3 class="card-title" style="float:left">Merchant Invoices</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped table-vcenter text-nowrap mb-0 dataTable no-footer" id="user-table">
                        <thead>
                            <tr>
                                <th>Package#</th>
                                <th>Start From</th>
                                <th>Valid Till</th>
                                <th>Merchant#</th>
                                <th>Payment Status</th>
                                <th>Invoice Status</th>
                                <th>Total Bill</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var merchant in Model)
                            {
                            <tr>
                                <td class="d-flex">
                                    @merchant.PackageName
                                </td>

                                <td><span>@merchant.StartingFrom</span></td>
                                <td>@merchant.ValidTill</td>
                                <td class="d-flex">
                                    @merchant.UserName
                                </td>
                                <td>
                                    @if (merchant.IsAmountPaid)
                                    {
                                        <span>Paid</span>
                                    }
                                    else
                                    {
                                        <span>Due</span>
                                    }
                                </td>
                                <td>@merchant.Status</td>
                                <td>@merchant.TotalBill</td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#Page_Title").html("Merchant Invoices");
    })
    $('#user-table').DataTable(
        {
            "aLengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
            "iDisplayLength": 5
        }
    );
</script>